#include <iostream>  // Підключення бібліотеки для вводу-виводу
#include <cstdlib>   // Підключення бібліотеки для роботи з випадковими числами
#include <ctime>     // Підключення бібліотеки для роботи з часом

using namespace std; // Дозволяє використовувати елементи стандартної бібліотеки без префікса std::

const int SIZE = 5;  // Константа для розміру двовимірного масиву

int main() {
    int arr[SIZE][SIZE], evenCount = 0, oddCount = 0; // Оголошення масиву та лічильників парних і непарних чисел
    srand(time(0)); // Ініціалізація генератора випадкових чисел поточним часом
    
    // Заповнення масиву випадковими числами та його вивід
    for (int *p = &arr[0][0]; p < &arr[0][0] + SIZE * SIZE; ++p) {
        *p = rand() % 100; // Генерація випадкового числа від 0 до 99
        cout << *p << " " << ((p - &arr[0][0] + 1) % SIZE == 0 ? "\n" : ""); // Вивід числа та перехід на новий рядок після кожного рядка
        (*p % 2 == 0) ? ++evenCount : ++oddCount; // Підрахунок парних і непарних чисел
    }
    
    cout << "Головна діагональ: ";
    for (int i = 0; i < SIZE; ++i) cout << *(*(arr + i) + i) << " "; // Вивід головної діагоналі
    
    cout << "\nПобічна діагональ: ";
    for (int i = 0; i < SIZE; ++i) cout << *(*(arr + i) + (SIZE - 1 - i)) << " "; // Вивід побічної діагоналі
    
    cout << "\nКількість парних: " << evenCount << ", непарних: " << oddCount << endl; // Вивід кількості парних і непарних чисел
    return 0; // Завершення програми
}
