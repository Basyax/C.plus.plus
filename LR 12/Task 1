#include <iostream>  // Підключаємо бібліотеку для роботи з введенням/виведенням

using namespace std;

int main() {
    int vector[] = {3, -5, 7, 10, -4, 14, 5, 2, -13};  // Одновимірний масив
    int *ptr = vector;  // Вказівник ptr на перший елемент масиву
    int *end = vector + sizeof(vector) / sizeof(vector[0]);  // Вказівник на позицію після останнього елемента
    int minVal = *ptr++;  // Записуємо перший елемент масиву в minVal, потім ptr зміщується на наступний елемент

    while (ptr < end) {  // Поки ptr не досягне кінця масиву
        if (*ptr < minVal) minVal = *ptr;  // Якщо поточний елемент менший за minVal, оновлюємо minVal
        ptr++;  // Переходимо до наступного елемента
    }

    cout << "Мінімальний елемент: " << minVal << endl;  // Виводимо знайдений мінімальний елемент
    return 0;  // Завершуємо програму
}
