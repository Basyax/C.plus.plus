#include <iostream> // Підключення бібліотеки для введення/виведення

using namespace std; // Використовуємо простір імен std, щоб не писати std:: кожен раз

int main() { // Початок головної функції програми
    const int rows = 10; // Оголошення змінної для кількості рядків (висоти матриці)
    const int cols = 10; // Оголошення змінної для кількості стовпців (ширини матриці)
    
    // Оголошення двовимірного масиву розміру 10x10, заповненого нулями
    int matrix[rows][cols] = {0}; 
    
    // Вказівник на перший елемент масиву (матриця[0][0])
    int* ptr = &matrix[0][0];
    
    // Заповнення масиву значеннями таблиці множення
    for (int i = 0; i < rows; i++) { // Цикл по рядках
        for (int j = 0; j < cols; j++) { // Цикл по стовпцях
            *(ptr + i * cols + j) = (i + 1) * (j + 1); // Присвоєння значення для таблиці множення
        }
    }
    
    // Виведення матриці
    for (int i = 0; i < rows; i++) { // Цикл по рядках
        for (int j = 0; j < cols; j++) { // Цикл по стовпцях
            cout << *(ptr + i * cols + j) << "\t"; // Виведення елемента матриці через вказівник
        }
        cout << endl; // Перехід на новий рядок після виведення всіх елементів поточного рядка
    }

    return 0; // Завершення програми
}
