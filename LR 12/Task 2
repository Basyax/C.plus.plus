#include <iostream>  // Підключаємо бібліотеку для введення/виведення

using namespace std;

int main() {
    int matrix[10][10] = {0};  // Оголошуємо двовимірний масив, заповнений нулями
    int *ptr = &matrix[0][0];  // Вказівник на перший елемент масиву

    // Заповнення таблиці множення без індексації
    for (int i = 0; i < 10; i++) {  // Перебір рядків
        for (int j = 0; j < 10; j++) {  // Перебір стовпців
            *(ptr + i * 10 + j) = (i + 1) * (j + 1);  // Записуємо результат множення
        }
    }

    // Виведення таблиці множення без індексації
    for (int i = 0; i < 10; i++) {  
        for (int j = 0; j < 10; j++) {  
            cout.width(4);  // Вирівнюємо вивід для гарного вигляду
            cout << *(ptr + i * 10 + j);  // Виводимо значення через вказівник
        }
        cout << endl;  // Перехід на новий рядок
    }

    return 0;  // Завершення програми
}
