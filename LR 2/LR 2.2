#include <iostream>
#include <cmath> 
using namespace std;

int main() {
    double x, y;

    cout << "Введення координат точки(x, y) через пробіл: ";
    cin >> x >> y;

    if (x >= 0 && y >= 0 && y <= 1 - x) {
        cout << "Точка знаходиться в зоні заштрихованого трикутник." << endl;
    }
    
    else if (x <= 0 && y <= 0 && x * x + y * y <= 1) {
        cout << "Точка знаходиться в заштрихованій області півкола." << endl;
    }

    else {
        cout << "Точка знаходиться за межами заштрихованої області." << endl;
    }

    return 0;
}
