#include <iostream>   // Підключаємо бібліотеку для вводу/виводу
#include <vector>     // Підключаємо бібліотеку для роботи з векторами
#include <algorithm>  // Підключаємо бібліотеку для роботи з функціями min_element і max_element

using namespace std;  // Використовуємо стандартний простір імен

int main() {
    int n;  // Оголошуємо змінну для розміру масиву

    // Вводимо розмір масиву
    cout << "Введіть кількість елементів масиву: ";
    cin >> n;  // Зчитуємо розмір масиву

    vector<int> m(n);  // Створюємо вектор для зберігання елементів масиву

    // Вводимо елементи масиву
    cout << "Введіть елементи масиву: ";
    for (int i = 0; i < n; i++) {  
        cin >> m[i];  // Зчитуємо кожен елемент масиву
    }

    // Знаходимо індекси найбільшого і найменшого елементів
    auto max_pos = max_element(m.begin(), m.end());  // Ітератор на найбільший елемент
    auto min_pos = min_element(m.begin(), m.end());  // Ітератор на найменший елемент

    // Змінюємо місцями найбільший і найменший елементи
    swap(*max_pos, *min_pos);  // Використовуємо функцію swap для обміну значень

    // Виводимо масив після обміну
    cout << "Масив після зміни місцями найбільшого і найменшого елементів: ";
    for (int i = 0; i < n; i++) {  
        cout << m[i] << " ";  // Виводимо кожен елемент масиву через пробіл
    }
    cout << endl;  // Перехід на новий рядок після виведення масиву

    return 0;  // Завершуємо програму
}
