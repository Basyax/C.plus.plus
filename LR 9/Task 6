#include <iostream>   // Підключаємо бібліотеку для вводу/виводу
#include <vector>     // Підключаємо бібліотеку для роботи з векторами

using namespace std;  // Використовуємо стандартний простір імен

int main() {
    int n;  // Оголошуємо змінну для розміру масиву

    // Вводимо розмір масиву
    cout << "Введіть кількість елементів масиву: ";
    cin >> n;  // Зчитуємо розмір масиву

    vector<int> m(n);  // Створюємо вектор для зберігання елементів масиву

    // Вводимо елементи масиву
    cout << "Введіть елементи масиву: ";
    for (int i = 0; i < n; i++) {  
        cin >> m[i];  // Зчитуємо кожен елемент масиву
    }

    // Знаходимо перший нульовий елемент
    int zeroIndex = -1;  // Ініціалізуємо змінну для зберігання індексу нуля

    for (int i = 0; i < n; i++) {
        if (m[i] == 0) {  // Якщо елемент дорівнює нулю
            zeroIndex = i;  // Зберігаємо індекс
            break;  // Зупиняємо пошук, бо знайшли перший нуль
        }
    }

    // Виводимо результат
    if (zeroIndex != -1) {  
        cout << "Перший нульовий елемент знаходиться на позиції: " << zeroIndex + 1 << endl;
    } else {
        cout << "Масив не містить нульових елементів." << endl;
    }

    return 0;  // Завершуємо програму
}
