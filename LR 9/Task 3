#include <iostream>   // Підключаємо бібліотеку для вводу/виводу
#include <vector>     // Підключаємо бібліотеку для роботи з векторами
#include <algorithm>  // Підключаємо бібліотеку для використання функції sort

using namespace std;  // Використовуємо стандартний простір імен

int main() {
    int n;  // Оголошуємо змінну для розміру масиву

    // Вводимо розмір масиву
    cout << "Введіть кількість елементів масиву: ";
    cin >> n;  // Зчитуємо розмір масиву

    vector<int> m(n);  // Створюємо вектор для зберігання елементів масиву

    // Вводимо елементи масиву
    cout << "Введіть елементи масиву: ";
    for (int i = 0; i < n; i++) {  
        cin >> m[i];  // Зчитуємо кожен елемент масиву
    }

    // Перевіряємо, чи розмір масиву дозволяє знайти другий за величиною елемент
    if (n < 2) {
        cout << "У масиві недостатньо елементів, щоб знайти другий за величиною." << endl;
        return 1;  // Завершуємо програму з кодом помилки
    }

    // Сортуємо масив у порядку спадання
    sort(m.begin(), m.end(), greater<int>());  // Сортуємо елементи масиву від найбільшого до найменшого

    // Другий елемент після сортування — це другий за величиною
    cout << "Другий за величиною елемент: " << m[1] << endl;

    return 0;  // Завершуємо програму
}
