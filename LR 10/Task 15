#include <iostream>  // Підключаємо бібліотеку для вводу та виводу даних
using namespace std;  // Використовуємо стандартний простір імен

int main() {
    const int m = 3, n = 3;  // Розміри масиву: 3x3
    int arr[m][n];  // Оголошення двомірного масиву розміром 3x3 для зберігання цілих чисел

    // Введення елементів масиву
    cout << "Введіть елементи масиву (3x3):" << endl;  // Виведення інструкції для користувача
    for (int i = 0; i < m; i++) {  // Зовнішній цикл для проходу по рядках
        for (int j = 0; j < n; j++) {  // Внутрішній цикл для проходу по стовпцях
            cin >> arr[i][j];  // Зчитуємо елемент масиву з клавіатури
        }
    }

    // Обчислення суми елементів головної діагоналі
    int sumMainDiagonal = 0;  // Ініціалізація змінної для збереження суми елементів головної діагоналі
    for (int i = 0; i < m; i++) {  // Цикл для проходу по головній діагоналі (i, i)
        sumMainDiagonal += arr[i][i];  // Додаємо елементи головної діагоналі до суми
    }

    // Обчислення суми елементів побічної діагоналі
    int sumSecondaryDiagonal = 0;  // Ініціалізація змінної для збереження суми елементів побічної діагоналі
    for (int i = 0; i < m; i++) {  // Цикл для проходу по побічній діагоналі (i, n-i-1)
        sumSecondaryDiagonal += arr[i][n - i - 1];  // Додаємо елементи побічної діагоналі до суми
    }

    // Виведення результатів
    cout << "Сума елементів головної діагоналі: " << sumMainDiagonal << endl;  // Виводимо суму головної діагоналі
    cout << "Сума елементів побічної діагоналі: " << sumSecondaryDiagonal << endl;  // Виводимо суму побічної діагоналі

    return 0;  // Успішне завершення програми
}
