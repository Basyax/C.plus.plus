#include <iostream>   // Підключаємо бібліотеку для вводу/виводу
#include <vector>     // Підключаємо бібліотеку для роботи з векторами
#include <algorithm>  // Підключаємо бібліотеку для використання функції max_element

using namespace std;  // Використовуємо стандартний простір імен

int main() {
    int n;  // Оголошуємо змінну для розміру масиву

    // Вводимо розмір масиву
    cout << "Введіть кількість елементів масиву: ";  
    cin >> n;  // Вводимо кількість елементів масиву

    vector<int> m(n);  // Створюємо вектор (масив) з n елементів для зберігання цілих чисел

    // Вводимо елементи масиву
    cout << "Введіть елементи масиву: "; 
    for (int i = 0; i < n; i++) {  // Проходимо циклом по кожному елементу масиву
        cin >> m[i];  // Зчитуємо кожен елемент масиву від користувача
    }

    // Знаходимо перший максимальний елемент в масиві
    auto max_pos = max_element(m.begin(), m.end());  // Функція max_element знаходить ітератор на перший максимальний елемент

    // Перевіряємо елементи перед першим максимальним елементом і замінюємо від'ємні на нулі
    for (int i = 0; i < max_pos - m.begin(); i++) {  // Проходимо через всі елементи до першого максимального
        if (m[i] < 0) {  // Якщо елемент є від'ємним
            m[i] = 0;  // Замінюємо від'ємний елемент на 0
        }
    }

    // Виводимо результат
    cout << "Масив після заміни від'ємних елементів на нулі до першого максимального елемента: "; 
    for (int i = 0; i < n; i++) {  // Проходимо циклом по всіх елементах масиву
        cout << m[i] << " ";  // Виводимо кожен елемент масиву через пробіл
    }
    cout << endl;  // Перехід на новий рядок після виведення всіх елементів масиву

    return 0;  // Завершуємо програму, повертаючи значення 0 (успішне завершення)
}
