#include <iostream>   // Підключаємо бібліотеку для вводу/виводу
#include <vector>     // Підключаємо бібліотеку для роботи з векторами
#include <algorithm>  // Підключаємо бібліотеку для використання функції sort

using namespace std;  // Використовуємо стандартний простір імен

int main() {
    int n;  // Оголошуємо змінну для розміру масиву

    // Вводимо розмір масиву
    cout << "Введіть кількість елементів масиву: "; 
    cin >> n;  // Вводимо кількість елементів масиву

    vector<int> m(n);  // Створюємо вектор з n елементів (масив цілих чисел)

    // Вводимо елементи масиву
    cout << "Введіть елементи масиву: "; 
    for (int i = 0; i < n; i++) {
        cin >> m[i];  // Вводимо елементи масиву за допомогою циклу
    }

    // Сортуємо масив за зростанням
    sort(m.begin(), m.end());  // Сортуємо елементи масиву від початку до кінця за зростанням

    // Виводимо масив, відсортований за зростанням
    cout << "Масив, відсортований за зростанням: "; 
    for (int i = 0; i < n; i++) {
        cout << m[i] << " ";  // Виводимо елементи масиву через пробіл
    }
    cout << endl;  // Перехід на новий рядок після виведення масиву

    // Сортуємо масив за спаданням
    sort(m.begin(), m.end(), greater<int>());  // Сортуємо масив за спаданням, використовуючи функцію greater

    // Виводимо масив, відсортований за спаданням
    cout << "Масив, відсортований за спаданням: "; 
    for (int i = 0; i < n; i++) {
        cout << m[i] << " ";  // Виводимо елементи масиву через пробіл
    }
    cout << endl;  // Перехід на новий рядок після виведення масиву

    return 0;  // Завершуємо програму
}
