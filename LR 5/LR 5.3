#include <iostream>  // Для вводу/виводу
#include <iomanip>   // Для форматування виводу
#include <cmath>     // Для математичних функцій: sqrt, pow

using namespace std;

int main() {
    double a, b, h, x, y; // Змінні для початкового значення, кінцевого значення, кроку, аргументу x і функції y

    // Введення значень a, b та h
    cout << "Enter the beginning of segment a: ";
    cin >> a;
    cout << "Enter the end of segment b: ";
    cin >> b;
    cout << "Enter step h: ";
    cin >> h;

    // Встановлюємо x у початкове значення a
    x = a;

    // Виведення заголовка таблиці
    cout << "----------------------------------" << endl;
    cout << "|     X       |       Y          |" << endl;
    cout << "----------------------------------" << endl;

    // Цикл з передумовою для табулювання функції
    while (x <= b) { // Перевірка умови перед виконанням тіла циклу
        // Перевірка області допустимих значень (ОДЗ)
        if (-x + 6 < 0) { // Якщо підкореневий вираз від'ємний
            cout << "The value x = " << x << " does not belong to the ODE. Stopping calculation." << endl;
            break; // Завершуємо цикл
        }

        // Обчислення значення функції y
        y = 5 * pow(x, 3) + sqrt(-x + 6);

        // Виведення значення x та y у вигляді таблиці
        cout << fixed << setprecision(5); // Форматування з 5 знаками після коми
        cout << "| " << setw(10) << x << " | " << setw(15) << y << " |" << endl;

        // Збільшуємо значення x на крок h
        x += h;
    }

    cout << "----------------------------------" << endl;

    return 0; // Успішне завершення програми
}
