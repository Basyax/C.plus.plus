#include <iostream> // Підключаємо бібліотеку для вводу/виводу
using namespace std; // Дозволяє використовувати стандартні функції без префіксу std::

int main() { // Точка входу в програму
    int sum = 0; // Оголошуємо змінну sum і ініціалізуємо її нулем, щоб зберігати суму квадратів

    for (int i = 1; i <= 25; i++) { // Цикл, який проходить через всі числа від 1 до 25
        sum += i * i; // Додаємо квадрат поточного числа i до змінної sum
    }

    cout << "Сума квадратів від 1 до 25 дорівнює: " << sum << endl; // Виводимо результат на екран
    return 0; // Завершуємо програму і повертаємо 0, що вказує на успішне виконання
}
