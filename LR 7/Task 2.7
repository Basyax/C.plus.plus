#include <iostream> // Підключаємо бібліотеку для вводу-виводу
using namespace std; // Використовуємо простір імен std для спрощення запису

int main(void) { // Головна функція програми
    double pi4 = 0.0; // Ініціалізуємо змінну для обчислення π/4
    long n; // Змінна для збереження кількості ітерацій

    cout << "Кількість ітерацій? "; // Виводимо запит на введення кількості ітерацій
    cin >> n; // Зчитуємо кількість ітерацій від користувача

    // Цикл для обчислення суми за формулою Лейбніца
    for (long i = 0; i < n; ++i) { // Починаємо з i = 0, повторюємо до i < n, збільшуємо i на 1
        if (i % 2 == 0) { // Перевіряємо, чи індекс ітерації парний
            pi4 += 1.0 / (2 * i + 1); // Якщо парний, додаємо член ряду
        } else { // Якщо індекс ітерації непарний
            pi4 -= 1.0 / (2 * i + 1); // Віднімаємо член ряду
        }
    }

    cout.precision(20); // Встановлюємо точність виводу до 20 знаків після коми
    cout << "Pi = " << (pi4 * 4.0) << endl; // Виводимо значення π, помножене на 4

    return 0; // Завершуємо виконання програми
}
