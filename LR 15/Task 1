#include <iostream>            // Підключаємо бібліотеку для введення-виведення
using namespace std;           // Використовуємо простір імен std, щоб не писати std:: перед кожним cout

// Оголошення функції isLeap, яка приймає рік і повертає true або false
bool isLeap(int year) {
    // Перевірка: якщо рік кратний 4 і не кратний 100, або кратний 400 — це високосний рік
    return (year % 4 == 0 && year % 100 != 0) || (year % 400 == 0);
}

int main() {                   // Початок головної функції main
    for (int yr = 1995; yr < 2017; yr++) {  // Цикл по роках від 1995 до 2016
        cout << yr << " -> " << isLeap(yr) << endl;  // Вивід року і результату функції isLeap
    }
    return 0;                  // Завершення програми з кодом 0
}
