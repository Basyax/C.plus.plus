#include <iostream> // Підключаємо заголовковий файл iostream, який надає можливість роботи з введенням і виведенням (використання cout, cin тощо)

using namespace std; // Вказуємо, що будемо використовувати простір імен std, щоб не писати std:: перед кожним cout або іншим об’єктом із цього простору

// Оголошення функції isLeap, яка приймає одне ціле число (рік) і повертає логічне значення (true або false)
bool isLeap(int year) {
    // Умова перевірки, чи є рік високосним:
    // високосний рік — це рік, який кратний 4, але не кратний 100,
    // або рік, який кратний 400 (виняток із правила)
    return (year % 4 == 0 && year % 100 != 0) || (year % 400 == 0);
    // year % 4 == 0 — перевіряємо, чи рік ділиться на 4 без остачі
    // year % 100 != 0 — перевіряємо, чи НЕ ділиться на 100 (тобто не є століттям)
    // year % 400 == 0 — окрема перевірка: якщо ділиться на 400, то це високосний рік навіть попри те, що ділиться на 100
    // Якщо будь-яка з частин виразу істинна, функція повертає true (тобто рік високосний), інакше — false
}

int main() { // Оголошення головної функції main, з якої починається виконання програми
    // Цикл for, який починає змінну yr зі значення 1995 і виконується, поки yr менше 2017
    // Після кожної ітерації збільшує значення yr на 1
    for (int yr = 1995; yr < 2017; yr++) {
        // Виводимо на екран значення поточного року (yr), стрілочку "->"
        // та результат виконання функції isLeap для цього року (true або false)
        cout << yr << " -> " << isLeap(yr) << endl;
        // Приклад виводу: 2000 -> 1 (оскільки true відображається як 1), або 2001 -> 0 (false — це 0)
        // endl — це маніпулятор, який переводить курсор на новий рядок після кожного виводу
    }
    return 0; // Повертаємо 0 з функції main, що означає успішне завершення програми
}
