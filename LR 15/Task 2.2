#include <iostream>            // Бібліотека для вводу-виводу
using namespace std;           // Простір імен std

// Функція перевірки високосного року
bool isLeap(int year) {
    return (year % 4 == 0 && year % 100 != 0) || (year % 400 == 0);
}

// Функція, що повертає кількість днів у місяці за допомогою масиву
int monthLength(int year, int month) {
    // Масив з кількістю днів у кожному місяці (для невисокосного року)
    int daysInMonth[] = { 31, 28, 31, 30, 31, 30,
                          31, 31, 30, 31, 30, 31 };
    
    // Якщо місяць — лютий і рік високосний, повертаємо 29
    if (month == 2 && isLeap(year))
        return 29;

    // Інакше повертаємо значення з масиву (індекс: номер місяця - 1)
    return daysInMonth[month - 1];
}

int main() {
    for (int yr = 2000; yr < 2002; yr++) {      // Перебір років
        for (int mo = 1; mo <= 12; mo++) {      // Перебір місяців
            cout << monthLength(yr, mo) << " "; // Виведення кількості днів у місяці
        }
        cout << endl;                           // Новий рядок після кожного року
    }
    return 0;
}
