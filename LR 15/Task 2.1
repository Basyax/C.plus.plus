#include <iostream> // Підключаємо стандартну бібліотеку введення-виведення (дозволяє використовувати cout, cin та ін.)

using namespace std; // Вказуємо, що використовуватимемо простір імен std, щоб не писати std:: перед cout, endl тощо

// Оголошення функції isLeap, яка приймає ціле число (рік) і повертає логічне значення (true, якщо рік високосний; false — якщо ні)
bool isLeap(int year) {
    // Умова перевіряє, чи є рік високосним:
    // високосний, якщо ділиться на 4 і НЕ ділиться на 100, або якщо ділиться на 400
    return (year % 4 == 0 && year % 100 != 0) || (year % 400 == 0);
    // year % 4 == 0 — перевіряє кратність 4
    // year % 100 != 0 — перевіряє, що НЕ є кратним 100
    // year % 400 == 0 — перевірка для винятку: рік кратний 400 — обов'язково високосний
}

// Оголошення функції monthLength, яка приймає два параметри: рік (year) і номер місяця (month)
// Повертає ціле число — кількість днів у відповідному місяці
int monthLength(int year, int month) {
    switch(month) { // Конструкція switch — вибір дії залежно від значення змінної month
        case 2: // Якщо місяць — лютий (2-й місяць)
            return isLeap(year) ? 29 : 28; // Якщо рік високосний — повертаємо 29 днів, інакше — 28 днів
            // Тут використано тернарний оператор: умова ? значення_якщо_true : значення_якщо_false

        case 4: case 6: case 9: case 11: // Якщо місяць — квітень (4), червень (6), вересень (9) або листопад (11)
            return 30; // Ці місяці завжди мають 30 днів

        default: // Для всіх інших місяців (тобто січень, березень, травень, липень, серпень, жовтень, грудень)
            return 31; // Вони мають 31 день
    }
}

int main() { // Головна функція програми, з якої починається виконання

    // Зовнішній цикл: перебираємо роки від 2000 до 2001 включно (2000 і 2001)
    for (int yr = 2000; yr < 2002; yr++) {
        // Внутрішній цикл: перебираємо всі місяці від 1 до 12 (тобто січень до грудня)
        for (int mo = 1; mo <= 12; mo++) {
            // Виводимо на екран кількість днів у поточному місяці поточного року, відділяючи пробілом
            cout << monthLength(yr, mo) << " ";
        }
        // Після завершення виводу всіх 12 місяців для поточного року — переходимо на новий рядок
        cout << endl;
    }

    return 0; // Повертаємо 0 з функції main — стандартне завершення програми без помилок
}
